//Java code to demonstrate Reverse Pyramid
/*For n = 6
1 2 3 4 5 6
 2 3 4 5 6
  3 4 5 6
   4 5 6
    5 6
     6
*/
import java.util.*;
public class ReversePyramid{
    public static void main(String args[]){
        Scanner sc = new Scanner(System.in);
        //Number of Rows we want to print
        int rows = sc.nextInt();
        //Printing the Pattern
        for(int i = 1; i <= rows; i++){
            for(int j = 1; j < i; j++){
                System.out.print(" ");
            }
            for(int j = i; j <= rows; j++){
                System.out.print(j+" ");
            }
            System.out.println();
        }
    }
}
